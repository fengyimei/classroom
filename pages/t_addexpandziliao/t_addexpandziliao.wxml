<form bindsubmit="formSubmit">
  <view class="section">
    <view class="section-title">拓展资料标题</view>
    <input name="input" placeholder="在此输入标题"  value="{{hTitle}}"  bindinput="titleChange"/>
    <view class="section-title">拓展资料内容：</view>
    <view class="section-input">
        <textarea  name="textarea" placeholder="在此输入资料内容" auto-height="true" maxlength="-1" value="{{content}}" bindinput="contentChange" />
    </view>
    <view class="btn-area">
    <button formType="submit" type="primary">提交</button>
    </view>
  </view>
</form>

